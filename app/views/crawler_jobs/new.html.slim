h2 New Job

= bootstrap_form_for [:confirm, @crawler_job], method: :post, html: { style: 'max-width: 400px;' } do |f|
  = f.select :site, Crawlers::LIST.keys
  = f.text_field :name, required: true
  = f.text_field :url
  = f.text_area :url_list

  = f.submit 'Confirm', class: 'btn btn-light'

= link_to 'Back', crawler_jobs_path
